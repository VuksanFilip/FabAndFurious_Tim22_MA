<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PassengerMainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-400dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/car" />

        <!-- The main content view -->
        <RelativeLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/layoutr"
                android:alpha="0.9"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/login_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/routeDetailsTxt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Route details"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/routeDetailsTxt3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="54dp"
                    android:layout_marginEnd="114dp"
                    android:text="Avarage time"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/routeDetailsTxt4"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/routeDetailsTxt3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="114dp"
                    android:text="Price"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/routeDetailsTxt2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="60dp"
                    android:text="Favorites"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/firstAddressEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/routeDetailsTxt"
                    android:inputType="textPersonName"
                    android:ems="7"
                    android:hint="Location 1"
                    tools:ignore="MissingConstraints" />


                <EditText
                    android:id="@+id/secondAddressEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstAddressEdit"
                    android:layout_marginTop="5dp"
                    android:ems="7"
                    android:inputType="textPersonName"
                    android:hint="location 2"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="300dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="21dp"
                        tools:layout_editor_absoluteY="391dp" />

                    <EditText
                        android:id="@+id/editTextTextPersonName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Address 2"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="77dp"
                        tools:layout_editor_absoluteY="375dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"
                    android:text="@string/fill_form"
                    android:textAlignment="center"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="88dp"
                    tools:layout_editor_absoluteY="303dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="390dp">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#805D84"
                        android:checked="true"
                        android:text="type1"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="30dp"
                        tools:layout_editor_absoluteY="470dp" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#805D84"
                        android:checked="true"
                        android:text="type2"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="30dp"
                        tools:layout_editor_absoluteY="494dp" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#805D84"
                        android:checked="true"
                        android:text="type3"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="30dp"
                        tools:layout_editor_absoluteY="519dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="365dp"
                    android:text="@string/select_vehicle_type"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="451dp" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="450dp"
                    android:buttonTint="#805D84"
                    android:text="@string/babies"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="244dp"
                    tools:layout_editor_absoluteY="487dp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="480dp"
                    android:buttonTint="#805D84"
                    android:text="@string/pets"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="244dp"
                    tools:layout_editor_absoluteY="519dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="96dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="290dp"
                    android:layout_marginTop="300dp"
                    android:text="@string/show_route"
                    android:textColor="#805D84"
                    android:textSize="11sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="299dp"
                    tools:layout_editor_absoluteY="347dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="178dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="550dp"
                    android:background="#805D84"
                    android:text="@string/find_available_driver"
                    android:textColor="#FFFFFF"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="655dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="590dp"
                    android:text="@string/no_available_driver"
                    android:textAlignment="center"
                    android:textColor="#BF4646"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="696dp" />

                <RadioGroup
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="430dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="40dp"
                    tools:layout_editor_absoluteY="561dp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_time" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#805D84"
                        android:checked="true"
                        android:clickable="true"
                        android:text="@string/now" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#805D84"
                        android:checked="true"
                        android:clickable="true"
                        android:text="@string/choose_date"
                        android:textColorHighlight="#805D84"
                        android:textColorLink="#805D84" />


                </RadioGroup>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="610dp"
                    android:text="@string/favorite_locations"
                    android:textColor="#805D84"
                    android:textSize="10dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="65dp" />

                <EditText
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/routeDetailsTxt3"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="47dp"
                    android:layout_marginEnd="-83dp"
                    android:textSize="13dp"
                    android:text="TextView" />

                <EditText
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/routeDetailsTxt3"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="21dp"
                    android:hint="Date"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:textSize="13dp"
                    android:layout_alignEnd="@+id/routeDetailsTxt3"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-83dp"
                    android:text="TextView" />

                <RadioButton
                    android:id="@+id/radioButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="130dp"
                    android:layout_marginBottom="50dp"
                    android:text="reservations" />

                <RadioButton
                    android:id="@+id/radioButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="50dp"
                    android:text="now"/>

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="9dp"
                    android:textAllCaps="false"
                    android:text="Confirm" />
            </RelativeLayout>
        </RelativeLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>
